<p id="notice"><%= notice %></p>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src='fullcalendar/lang-all.js'></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body id="none">
  <h1>Nuevo turno</h1>
  <br>
  <div class="row">
    <div class="col-md-4">
      <form method="get">
        <div class="form-group">
          <%= select_tag 'cancha', options_from_collection_for_select(Cancha.all, 'id', :full_name), {class: "form-control"}  %>
        </div>
        <br>
        <input class="btn btn-default" type="submit"/>
      </form>
    </div>
  </div>
  <br>
  <br>

  <div id="calendar">

    <script>


    var myStart;

    function ok(){
      $('#calendar').fullCalendar('renderEvent',
      {
        start: myStart
      },
      true
    );
    window.location = '/turns/<%= current_user.id %>/create?start='+ myStart + '&cancha=' + <%= params[:cancha] %>;
  };

  $('#myModal').modal({
    show: 'false'
  });
  $('#calendar').fullCalendar({
    lang: 'es',
    businessHours: {
      start: '08:00',
      end: '24:00'
    },
    minTime: "08:00:00",
    maxTime: "24:00:00",
    slotDuration:'01:00:00',
    slotEventOverlap: false,
    defaultView: 'agendaWeek',
    allDaySlot: false,
    height: 389,
    monthNames: ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'],
    dayNamesShort : ['Domingo', 'Lunes', 'Martes', 'Miercoles', 'Jueves', 'Viernes', 'Sabado'],
    defaultTimedEventDuration: '01:00:00',
    header: {
      left:   'title',
      center: 'today',
      right:  'prev,next'
    },
    titleFormat:'MMMM YYYY',
    selectable: true,
    selectOverlap:false,
    selectHelper: true,
    eventOverlap: false,


    select: function(start,allDay) {
      var d = new Date(start);
      var moment = new Date();
      moment.setHours(moment.getHours() - 3)
      var s= d.getHours() + 3;
      if (d > moment){
        myStart = start;
        $('#myModal').modal('show');
        $(hora).text("Desea reservar el turno de las "+s+"hs?");
      }
      $('#calendar').fullCalendar('unselect');
    },
    editable: false,
    events: [
      <% @turns.each do |turn| %>
      {
        title  : '<%= turn.cancha.name %>',
        start  : '<%= turn.date.to_formatted_s(:iso8601) %>'
      },
      <% end %>
    ]

  })


  </script>

</div>
<div id="myModal" class="modal fade"  role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Reservar turno</h4>
      </div>
      <div class="modal-body">
        <p id="hora"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" onclick="ok();">Aceptar</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
      </div>
    </div>

  </div>
</div>

</body>
